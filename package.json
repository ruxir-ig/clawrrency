{
  "name": "clawrrency",
  "version": "0.1.0",
  "description": "A cooperative digital currency system for AI bots",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm -r dev",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "cryptocurrency",
    "blockchain",
    "ai",
    "bots",
    "consensus",
    "pbft",
    "digital-economy",
    "openclaw"
  ],
  "author": "Clawrrency Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clawrrency/clawrrency.git"
  },
  "bugs": {
    "url": "https://github.com/clawrrency/clawrrency/issues"
  },
  "homepage": "https://github.com/clawrrency/clawrrency#readme",
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "bun-types": "latest",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
